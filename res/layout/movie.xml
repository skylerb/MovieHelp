<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/striped_background" 
  	android:layout_margin="0.0dip"
  	android:padding="0.0dip" >
    <ImageView android:id="@+id/fanart"
        android:contentDescription="FanArt"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:scaleType="centerCrop"/>
    	<View android:layout_height="3.0dip" 
    	    android:layout_width="fill_parent" 
    	    android:background="#ffc84b4b"/>
	    <TextView
	        android:id="@+id/movie_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="8.0dip"
	       	android:paddingRight="8.0dip"
	       	android:paddingTop="9.0dip"
	       	android:textSize="21.0dip"
	       	android:textColor="@color/white"/>  
	   	<TextView
	   	    android:id="@+id/movie_subtitle"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="wrap_content"
	   	    android:paddingLeft="8.0dip"
	   	    android:paddingRight="8.0dip"
	   	    android:textColor="@color/light_grey"
	   	    android:textSize="14.0dip" />
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/genres_header" 
	   	    style="@style/Metadata_Header" 
	   	    android:text="@string/genres_label"/>
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/genres" 
	   	    style="@style/Metadata_Content"/>
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/actors_header" 
	   	    style="@style/Metadata_Header" 
	   	    android:text="@string/actors_label"/>
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/actors" 
	   	    style="@style/Metadata_Content"/>
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/directors_header" 
	   	    style="@style/Metadata_Header" 
	   	    android:text="@string/directors_label"/>
	   	<TextView android:layout_height="wrap_content" 
	   	    android:layout_width="wrap_content" 
	   	    android:id="@+id/directors" 
	   	    style="@style/Metadata_Content"/>
</LinearLayout>
