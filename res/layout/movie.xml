<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/striped_background" 
  	android:layout_margin="0.0dip"
  	android:padding="0.0dip" >
    <ImageView android:id="@+id/fanart"
        android:contentDescription="FanArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="0dip"
  		android:padding="0.0dip"
  		android:background="@drawable/imageborder"/>
	    <TextView
	        android:id="@+id/movie_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="8.0dip"
	       	android:paddingRight="8.0dip"
	       	android:paddingTop="9.0dip"
	       	android:textSize="21.0dip"
	       	android:textColor="@color/white"/>  
	   	<TextView
	   	    android:id="@+id/movie_subtitle"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="wrap_content"
	   	    android:paddingLeft="8.0dip"
	   	    android:paddingRight="8.0dip"
	   	    android:paddingBottom="9.0dip"
	   	    android:textColor="@color/light_grey"
	   	    android:textSize="14.0dip" />
</LinearLayout>
